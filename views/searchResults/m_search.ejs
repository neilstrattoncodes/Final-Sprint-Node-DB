<html lang="en">
  <%- include('../partials/header.ejs') %>
  <style>
    body {
      background-color: #f3db42;
      font-family: sans-serif;
      padding-bottom: 100px;
    }

    /* .searchMongoLogo {
      width: 100%;
      height: 100px;
      background-color: rgb(240, 218, 15);
    } */

    .monSearchContainer {
      margin: 0 auto;
      padding: 0px;
      box-sizing: border-box;
      background-image: linear-gradient(
        to bottom right,
        rgb(0, 7, 195),
        yellow
      );
      padding-top: 100px;
    }

    h2 {
      margin-bottom: 20px;
      color: #333;
    }

    .searchGridContainer {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      grid-gap: 20px;
      justify-content: center;
    }

    .movieBox {
      background-color: rgba(22, 198, 246, 0.587);
      border-radius: 5px;
      overflow: hidden;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
      max-height: 400px;
      width: 220px;
      margin: 0 auto;
    }
    .movieBox:hover {
      cursor: pointer;
      background-color: rgba(96, 204, 254, 0.774);
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
      max-height: 400px;
      width: 220px;
      margin: 0 auto;
    }

    .movieBox img {
      width: 100%;
      height: 250px;
      width: 180px;
    }
    .movieBox b {
      font-size: 16px;
      display: flex;
      justify-content: center;
      align-items: center;
      white-space: wrap;
      text-align: center;
      text-overflow: ellipsis;
    }
    .movieBox p {
      padding: 20px;
      margin: 0;
      color: #333;
      overflow: wrap;
      background-color: aliceblue;
      border-radius: 8px;
      display: grid;
      justify-content: center;
      align-items: center;
      text-align: center;
      height: 100px;
      width: 180px;
    }

    .movieBox a {
      text-decoration: none;
      color: #333;
    }

    .movieBox a:hover {
      text-decoration: underline;
    }

    button {
      background-color: #4caf50;
      border: none;
      color: white;
      padding: 5px 15px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 8px;
    }
    button:hover {
      background-color: #25ca2b;
      font-size: 18px;
    }
  </style>
  <body>
    <%- include('../partials/nav2.ejs') %>
    <div class="searchMongoLogo"></div>
    <div class="monSearchContainer">
      <h2>MongoDb Search Results</h2>
      <% if (mSearch.length > 0) { %>
      <div class="searchGridContainer">
        <% mSearch.forEach(result => { %>
        <div class="movieBox">
          <img src="<%= result.poster %>" alt="coming_soon.jpeg" href="" />
          <a href="/search/mongo/<%= result._id %>">
            <p>
              <b><%= result.title %></b> (<%= result.year %>)<br /><button>
                View More
              </button>
            </p>
          </a>
        </div>
        <% }) %> <% } else { %>
        <p>No movies found.</p>
        <% } %>
      </div>
    </div>
  </body>
  <% if (mSearch.length <= 5) { %> <%- include('../partials/footer.ejs') %> <% }
  else {%> <%- include('../partials/footer.ejs') %> <% } %>
</html>
